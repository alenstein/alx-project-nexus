# --- Django Core Settings ---
# SECURITY WARNING: keep the secret key used in production secret!
SECRET_KEY=your_secret_key_goes_here

# SECURITY WARNING: don't run with debug turned on in production!
DEBUG=True

# A comma-separated list of strings representing the host/domain names.
# For development with Docker: ALLOWED_HOSTS=localhost,127.0.0.1
# For production: ALLOWED_HOSTS=.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# --- Database Configuration ---
# These variables are used by docker-compose.yml to initialize the PostgreSQL container.
DB_NAME=ecommerce_db
DB_USER=postgres
DB_PASSWORD=password

# For local development with Docker, the DB_HOST should be the name of the 'db' service in docker-compose.yml.
DB_HOST=db
DB_PORT=5432

# The full database connection string used by Django.
# The format is psql://<user>:<password>@<host>:<port>/<dbname>
DB_URL=psql://postgres:password@db:5432/ecommerce_db

# --- Email Configuration ---
# For production, use 'django.core.mail.backends.smtp.EmailBackend'
# For development, use 'django.core.mail.backends.console.EmailBackend'
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP settings for a real email service (e.g., SendGrid, Mailgun, AWS SES)
# These are ignored if EMAIL_BACKEND is set to console.EmailBackend.
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-smtp-username
EMAIL_HOST_PASSWORD=your-smtp-password
DEFAULT_FROM_EMAIL="Your Name <noreply@yourdomain.com>"
