# --- Django & Application Settings ---
SECRET_KEY=your_super_secret_key
DEBUG=False
ALLOWED_HOSTS=your_domain.com,your_ec2_ip_address

# --- PostgreSQL Database Settings ---
# These are used by docker-compose to initialize the DB
# and by Django to connect to it.
DB_NAME=ecommerce_prod
DB_USER=your_username
DB_PASSWORD=a_very_strong_password
DB_HOST=db  # This is the service name from the docker-compose.yml
DB_PORT=5432

# --- Redis & Celery Settings ---
# The hostname 'redis' is the service name from the docker-compose.yml
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# --- Email Settings (for Zoho) ---
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.zoho.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_zoho_email@yourdomain.com
EMAIL_HOST_PASSWORD=your_zoho_app_specific_password
DEFAULT_FROM_EMAIL=your_zoho_email@yourdomain.com

# --- Superuser Credentials ---
# These are used by the entrypoint script to create an admin account.
SUPERUSER_EMAIL=admin@example.com
SUPERUSER_USERNAME=admin
SUPERUSER_PASSWORD=a_secure_admin_password
