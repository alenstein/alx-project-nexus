# --- Django Core Settings ---
SECRET_KEY=your_secret_key_goes_here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# --- CORS Configuration ---
# A comma-separated list of domains allowed to make cross-site requests.
# For production, this should be your frontend's domain(s).
# Example: CORS_ALLOWED_ORIGINS=https://www.myfrontend.com,https://myfrontend.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# --- Database Configuration ---
DB_URL=db_url

# --- Email Configuration ---
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-smtp-username
EMAIL_HOST_PASSWORD=your-smtp-password
DEFAULT_FROM_EMAIL="Your Name <noreply@yourdomain.com>"
